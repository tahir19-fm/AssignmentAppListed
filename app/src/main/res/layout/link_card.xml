<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:padding="4dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="12dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/ivCardLink"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/add_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Hello"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/ivCardLink"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:textStyle="normal"
            android:text="Hello"
            app:layout_constraintStart_toEndOf="@id/ivCardLink"
            app:layout_constraintTop_toBottomOf="@id/tvHeading"/>
        <TextView
            android:id="@+id/tvTotalClicks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="2133"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_marginEnd="16dp"
            android:text="Clicks"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTotalClicks"/>
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="10dp"
           android:paddingStart="12dp"
           android:background="@drawable/border_dotted_outline"
           app:layout_constraintTop_toBottomOf="@id/ivCardLink"
           app:layout_constraintStart_toStartOf="parent">

           <TextView
               android:id="@+id/tvLink"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="2dp"
               android:textSize="12sp"
               android:textStyle="normal"
               android:textColor="#0E6FFF"
               android:layout_marginEnd="16dp"
               android:maxLines="1"
               android:ellipsize="end"
               android:text="Clicsdjkfbksjfbksjdbfksjdbfajkjksxfvfdgdfgxxfgxfgxfgxfgxgxgxgxgxgdbks"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"/>
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginEnd="8dp"
               android:src="@drawable/copy_icon"
                 app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               />
       </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>